<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:background="@color/light_g">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:id="@+id/rl_buyer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            //paper
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcv_icon_paper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:elevation="4dp"
                app:cardCornerRadius="20dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                       android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_margin="5dp"
                        android:layout_width="60dp"
                        android:layout_height="90dp"
                        android:background="@drawable/paper"
                        android:id="@+id/iv_paper"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/paper_waste"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_toEndOf="@+id/iv_paper"
                        android:layout_margin="5dp"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:id="@+id/tv_paper_title"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_paper_title"
                        android:layout_toEndOf="@+id/iv_paper"

                        android:text="@string/price_for_kg"
                        android:layout_margin="5dp"

                        android:id="@+id/tv_paper_price"

                        android:textSize="12sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_paper_price"
                        android:layout_toEndOf="@+id/iv_paper"

                        android:text="@string/compensation_price"
                        android:layout_margin="5dp"

                        android:id="@+id/tv_paper_com"

                        android:textSize="12sp"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_paper_title"


                        android:text="@string/not_available"
                        android:layout_margin="5dp"

                        android:id="@+id/tv_paper_price_result"

                        android:textSize="12sp"

                        android:layout_alignParentEnd="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_paper_price_result"


                        android:text="@string/not_available"
                        android:layout_margin="5dp"

                        android:id="@+id/tv_paper_com_result"

                        android:textSize="12sp"

                        android:layout_alignParentEnd="true"/>

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="@string/update"
                        android:textSize="10sp"
                        android:layout_below="@+id/tv_paper_com_result"
                        android:id="@+id/bt_paper_update"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="5dp"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
            //plastic
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcv_icon_plastic"
                android:layout_below="@+id/mcv_icon_paper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:elevation="4dp"
                app:cardCornerRadius="20dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_margin="5dp"
                        android:layout_width="60dp"
                        android:layout_height="90dp"
                        android:background="@drawable/plastic"
                        android:id="@+id/iv_plastic"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/plastic_waste"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_toEndOf="@+id/iv_plastic"
                        android:layout_margin="5dp"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:id="@+id/tv_plastic_title"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_plastic_title"
                        android:layout_toEndOf="@+id/iv_plastic"

                        android:text="@string/price_for_kg"
                        android:layout_margin="5dp"

                        android:id="@+id/tv_plastic_price"

                        android:textSize="12sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_plastic_price"
                        android:layout_toEndOf="@+id/iv_plastic"

                        android:text="@string/compensation_price"
                        android:layout_margin="5dp"

                        android:id="@+id/tv_plastic_com"

                        android:textSize="12sp"/>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_plastic_title"


                        android:text="@string/not_available"
                        android:layout_margin="5dp"

                        android:id="@+id/tv_plastic_price_result"

                        android:textSize="12sp"

                        android:layout_alignParentEnd="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_plastic_price_result"


                        android:text="@string/not_available"
                        android:layout_margin="5dp"

                        android:id="@+id/tv_plastic_com_result"

                        android:textSize="12sp"

                        android:layout_alignParentEnd="true"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/bt_plastic_update"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="@string/update"
                        android:textSize="10sp"
                        android:layout_below="@+id/tv_plastic_com_result"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="5dp"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
            //metal
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcv_icon_metal"
                android:layout_below="@+id/mcv_icon_plastic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:elevation="4dp"
                app:cardCornerRadius="20dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_margin="5dp"
                        android:layout_width="60dp"
                        android:layout_height="90dp"
                        android:background="@drawable/metal"
                        android:id="@+id/iv_metal"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Metal_waste"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_toEndOf="@+id/iv_metal"
                        android:layout_margin="5dp"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:id="@+id/tv_metal_title"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_metal_title"
                        android:layout_toEndOf="@+id/iv_metal"

                        android:text="@string/price_for_kg"
                        android:layout_margin="5dp"

                        android:id="@+id/tv_metal_price"

                        android:textSize="12sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_metal_price"
                        android:layout_toEndOf="@+id/iv_metal"

                        android:text="@string/compensation_price"
                        android:layout_margin="5dp"

                        android:id="@+id/tv_metal_com"

                        android:textSize="12sp"/>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_metal_title"


                        android:text="@string/not_available"
                        android:layout_margin="5dp"

                        android:id="@+id/tv_metal_price_result"

                        android:textSize="12sp"

                        android:layout_alignParentEnd="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_metal_price_result"


                        android:text="@string/not_available"
                        android:layout_margin="5dp"

                        android:id="@+id/tv_metal_com_result"

                        android:textSize="12sp"

                        android:layout_alignParentEnd="true"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/bt_metal_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="@string/update"
                        android:textSize="10sp"
                        android:layout_below="@+id/tv_metal_com_result"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="5dp"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>